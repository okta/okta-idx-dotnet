@model direct_auth_idx.Models.ForgotPasswordViewModel
@using Okta.Idx.Sdk

@{
    ViewBag.Title = ViewBag.Title ?? "Enter your email to recover your password.";
}

<br />

<div class="row">
    <div class="col-md-8">
        <section id="forgotPasswordForm">
            @using (Html.BeginForm("ForgotPasswordAsync", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Reset your password.</h4>
                <h5>Provide your email and verify with one of the following authenticators to reset your password.</h5>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AuthenticatorType, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div>
                            <label>
                                @Html.RadioButtonFor(m => m.AuthenticatorType, AuthenticatorType.Email)
                                Email
                            </label>
                        </div>
                        <div>
                            <label>
                                @Html.RadioButtonFor(m => m.AuthenticatorType, AuthenticatorType.Sms)
                                SMS
                            </label>
                        </div>
                        @Html.ValidationMessageFor(m => m.AuthenticatorType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}