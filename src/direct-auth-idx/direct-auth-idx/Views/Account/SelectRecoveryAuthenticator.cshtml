@model direct_auth_idx.Models.SelectRecoveryAuthenticatorViewModel

@{
   ViewBag.Title = "Reset password";
   Layout = "~/Views/Shared/_Layout.cshtml"; 
 }
<h2>@ViewBag.Title</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <section id="selectAuthenticatorForm">
            
            @using (Html.BeginForm("SelectRecoveryAuthenticatorAsync", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Reset your password</h4>
                <h5>Verify with one of the following authenticators to reset your password.</h5>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <ul>
                @foreach (var authenticator in Model.Authenticators)
                {
                   <div>
                       <label>
                           @Html.RadioButtonFor(m => m.AuthenticatorId, authenticator.Id)
                           @authenticator.Name
                       </label>
                   </div>
                }
                </ul>
                @Html.ValidationMessageFor(m => m.AuthenticatorId, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>            
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
