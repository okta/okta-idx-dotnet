
@using Okta.Idx.Sdk

@model List<IdpOption>

@if (Model.Count == 0)
{
    <span>This Okta application has no idenity providers configured, please check with your Okta administrator.</span>
}
else
{
<form class="form-horizontal">
    <div class="form-group">
        @foreach (IdpOption idpOption in Model)
        {
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-primary" href="@idpOption.Href">
                    Sign in with @(idpOption.Name)
                </a>
            </div>
        }
    </div>
</form>
}
