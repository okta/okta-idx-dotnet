@model embedded_auth_with_sdk.Models.ChangePasswordViewModel
@{
ViewBag.Title = ViewBag.Title ?? "Please, provide your new password.";
}

<div class="row d-center">
    <div class="col-md-8">
        @using (Html.BeginForm("ChangePasswordAsync", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Change Password</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <div class="row row-no-gutters">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                    </div>
                    <div class="row row-no-gutters">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <div class="row row-no-gutters">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    </div>
                    <div class="row row-no-gutters">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-primary btn-stretch-wide" id="SubmitBtn" />
                </div>
            </div>
        }
    </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
