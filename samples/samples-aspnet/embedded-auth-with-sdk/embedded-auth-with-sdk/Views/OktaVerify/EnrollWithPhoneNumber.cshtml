@model embedded_auth_with_sdk.Models.OktaVerifyEnrollWithPhoneNumberModel

@{
    ViewBag.Title = ViewBag.Title ?? "Enroll Okta Verify";
}

<div class="row d-center">
    <div class="col-md-8">
        @using (Html.BeginForm("EnrollWithPhoneNumber", "OktaVerify", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Set up Okta Verify via sms link</h4>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.CountryCode, new { @class = "control-label" })
                    @Html.EditorFor(m => m.CountryCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
                    @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-primary btn-stretch-wide" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}